@model PageInformation<Semester>

@{
	var title = "Semester List";
	ViewData["Title"] = title;
}

<div class="card">
	<div class="card-header">
		<div class="row">
			<div class="col-8">
				<h2>@title</h2>
			</div>
			<div class="col-4 text-end">
				<a asp-action="Create" class="btn btn-success text-white mt-1">
					<i class="bi bi-plus-circle"></i> Create New
				</a>
			</div>
		</div>
	</div>
	<div class="card-body">
		<table class="table table-striped table-bordered">
			<thead class="text-center">
				<tr>					
					<th>Name</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody class="text-center">
				@foreach (var item in Model.Items)
				{
					<tr>						
						<td>@item.Name</td>
						<td>
							<a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-info dis" disabled>
								<i class="bi bi-pencil-square"></i> Edit
							</a>
							<a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger" disabled>
								<i class="bi bi-trash"></i> Delete
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
		@{
			var prevDisable = !Model.HasPreviousPage ? "disabled" : "";
			var nextDisable = !Model.NextPreviousPage ? "disabled" : "";
		}

		<nav aria-label="Page navigation">
			<ul class="pagination">
				<li class="page-item">
					<a asp-action="Index" asp-route-pageNuber="@(Model.PageNumber-1)" class="btn btn-default @prevDisable"> << </a>
				</li>
				@for (int i = 1; i <= Model.TotalPage; i++)
				{
					<li class="page-item">
						<a class="page-link" asp-action="Index"
						   asp-route-pagenumber="@i">@i</a>
					</li>
				}
				<li class="page-item">
					<a asp-action="Index" asp-route-pageNuber="@(Model.PageNumber+1)" class="btn btn-default @nextDisable"> >> </a>
				</li>
			</ul>
		</nav>
	</div>

</div>

