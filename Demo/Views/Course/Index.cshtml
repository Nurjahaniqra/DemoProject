@model IEnumerable<Course>

@{
	var title = "Course List";
	ViewData["Title"] = title;
}

<div class="card">
	<div class="card-header">
		<div class="row">
			<div class="col-8">
				<h2>@title</h2>
			</div>
			<div class="col-4 text-end">
				<a asp-action="Create" class="btn btn-success text-white mt-1">
					<i class="bi bi-plus-circle"></i> Create New
				</a>
			</div>
		</div>
	</div>
	<div class="card-body">
		<table class="table table-striped table-bordered">
			<thead class="text-center">
				<tr>
					<th>@Html.DisplayNameFor(m => m.Code)</th>
					<th>@Html.DisplayNameFor(m => m.Name)</th>
					<th>@Html.DisplayNameFor(m => m.Credit)</th>
					<th>@Html.DisplayNameFor(m => m.Description)</th>
					<th>Department</th>
					<th>Semester</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody class="text-center">
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.Code</td>
						<td>@item.Name</td>
						<td>@item.Credit</td>
						<td>@item.Description</td>
						<td>@item.Department.Name</td>
						<td>@item.Semester.Name</td>
						<td>
							<a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-info">
								<i class="bi bi-pencil-square"></i> Edit
							</a>
							<a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">
								<i class="bi bi-trash"></i> Delete
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>		
	</div>

</div>
